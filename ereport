    <script>
        // Simulasi data pengaduan
        const pengaduanData = [
            {
                id: 1,
                nama: "Budi Santoso",
                kategori: "Infrastruktur",
                lokasi: "Jl. Merdeka No. 45, Jakarta",
                deskripsi: "Jalan berlubang yang membahayakan pengendara motor",
                tanggal: "2025-01-15",
                status: "Diproses"
            },
            {
                id: 2,
                nama: "Siti Nurhaliza",
                kategori: "Lingkungan",
                lokasi: "Kelurahan Cibubur, Depok",
                deskripsi: "Sampah menumpuk di tepi jalan selama berminggu-minggu",
                tanggal: "2025-01-14",
                status: "Ditindaklanjuti"
            },
            {
                id: 3,
                nama: "Ahmad Wijaya",
                kategori: "Pelayanan Publik",
                lokasi: "Kantor Kelurahan Menteng",
                deskripsi: "Pelayanan lambat dan kurang responsif",
                tanggal: "2025-01-13",
                status: "Selesai"
            }
        ];

        function displayPengaduan() {
            const container = document.getElementById('daftarPengaduan');
            container.innerHTML = pengaduanData.map(item => `
                <div class="bg-gray-50 p-6 rounded-lg border-2 border-black hover:shadow-lg transition">
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-xl font-bold text-black">${item.nama}</h3>
                        <span class="px-3 py-1 rounded-full text-sm font-bold ${item.status === 'Selesai' ? 'bg-green-200 text-green-800' :
                    item.status === 'Ditindaklanjuti' ? 'bg-blue-200 text-blue-800' :
                        'bg-yellow-200 text-yellow-800'
                }">
                            ${item.status}
                        </span>
                    </div>
                    <p class="text-sm text-gray-600 mb-2"><strong>Kategori:</strong> ${item.kategori}</p>
                    <p class="text-sm text-gray-600 mb-2"><strong>Lokasi:</strong> ${item.lokasi}</p>
                    <p class="text-sm text-gray-600 mb-3"><strong>Tanggal:</strong> ${item.tanggal}</p>
                    <p class="text-gray-700">${item.deskripsi}</p>
                </div>
            `).join('');
        }

        function submitForm(event) {
            event.preventDefault();
            alert('âœ… Pengaduan Anda telah berhasil dikirim!\n\nTerima kasih telah melaporkan. Tim kami akan segera menindaklanjuti.');
            event.target.reset();
        }

        // Tampilkan pengaduan saat halaman dimuat
        displayPengaduan();
    </script>
